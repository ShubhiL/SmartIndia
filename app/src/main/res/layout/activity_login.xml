<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shaktii.shubhilohani.smartindia.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linear_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_transparent_50"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_app_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sih_logo" />

            <EditText
                android:id="@+id/edit_ulb_name"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_white"
                android:gravity="center|left"
                android:hint="ULB Name"
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:nextFocusForward="@+id/edit_password"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/value_14dp" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="@dimen/value_260dp"
                android:layout_height="@dimen/value_40dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:background="@drawable/button_white"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789.`~!@#$%^*+-/=?_{|}(),:;[\]&amp;&quot;&apos;&lt;&gt;"
                android:gravity="center|left"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="15"
                android:maxLines="1"
                android:nextFocusForward="@+id/txt_sign_in"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/value_14dp" />

            <Button
                android:id="@+id/button_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_40dp"
                android:layout_marginTop="@dimen/value_20dp"
                android:background="@drawable/button_white"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:onClick="signIn"
                android:text="@string/button_sign_in"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/value_18dp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
