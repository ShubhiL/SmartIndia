<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/value_270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_popup"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/value_20dp">

        <TextView
            android:id="@+id/txt_message_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_10dp"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/value_14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_40dp"
            android:layout_marginTop="@dimen/value_30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/txt_cancel_logout"
                    android:layout_width="@dimen/value_60dp"
                    android:layout_height="@dimen/value_30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_white"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="Cancel"
                    android:textColor="@color/black"
                    android:textSize="@dimen/value_14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/txt_ok_logout"
                    android:layout_width="@dimen/value_60dp"
                    android:layout_height="@dimen/value_30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_white"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="Ok"
                    android:textColor="@color/black"
                    android:textSize="@dimen/value_14dp" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>