<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/value_5dp" />

            <gradient
                android:angle="270"
                android:centerColor="@color/progress_background"
                android:centerY="0.50"
                android:endColor="@color/progress_background"
                android:startColor="@color/progress_background" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/value_5dp" />

                <gradient
                    android:angle="90"
                    android:endColor="@color/progress_background"
                    android:startColor="@color/progress_background" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/value_5dp" />

                <gradient
                    android:angle="90"
                    android:endColor="@color/progress"
                    android:startColor="@color/progress" />
            </shape>
        </clip>
    </item>

</layer-list>